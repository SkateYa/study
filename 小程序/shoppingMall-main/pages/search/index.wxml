<view class="search-row">
    <input type="text" value="{{inputValue}}" placeholder="请输入您要搜索的商品" bindinput="handleInput" />
    <button hidden="{{!isFocus}}" bindtap="handleCancel">取消</button>
</view>
<view class="search-content">
    <navigator class="search-item" url="/pages/goods_detail/index?goods_id={{item.goods_id}}" wx:for="{{goods}}" wx:key="goods_id">{{item.goods_name}}</navigator>
</view>